{
    "exclude": ["node_modules/*"],
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "compilerOptions": {
        "lib": ["es2015"],
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "./build",
        "paths": {
            "#src/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "strictNullChecks": true
    }
}
